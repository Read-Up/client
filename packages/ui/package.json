{
  "name": "@readup/ui",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./*": {
      "types": "./dist/*/index.d.mts",
      "default": "./dist/*/index.mjs"
    },
    "./styles.css": "./src/styles/styles.css"
  },
  "scripts": {
    "build": "tsup",
    "dev:watch": "tsup --watch",
    "dev": "pnpm storybook:dev",
    "lint": "eslint src --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "generate:theme": "tsx ./scripts/generate-theme-css.ts",
    "check-types": "tsc --noEmit",
    "storybook:dev": "storybook dev --ci -p 6008",
    "storybook:build": "storybook build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3",
    "@readup/eslint-config": "workspace:*",
    "@readup/icons": "workspace:*",
    "@readup/tokens": "workspace:*",
    "@readup/typescript-config": "workspace:*",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@tailwindcss/postcss": "^4.0.14",
    "@turbo/gen": "^2.4.4",
    "@types/node": "^22.13.9",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "chromatic": "11.28.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^9.22.0",
    "eslint-plugin-storybook": "0.12.0",
    "postcss": "^8.5.3",
    "storybook": "8.6.12",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.13",
    "tsup": "^8.0.2",
    "tsx": "^4.19.3",
    "typescript": "5.8.2"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "2.1.12",
    "framer-motion": "12.11.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
