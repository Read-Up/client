{
  "extends": "@readup/typescript-config/nextjs.json",
  "compilerOptions": {
    "typeRoots": ["./app/_types/common/*", "node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./app/*"]
    },
    "types": ["jest", "node"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/__tests__/**/*"],
  "exclude": ["node_modules"]
}
