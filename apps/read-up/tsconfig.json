{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "preserveSymlinks": false,
  "removeComments": true,
  "typeRoots": [
    "./app/_types/common/*",
  ],
  "baseUrl": "./",
  "paths": {
    "@/*": [
      "./app/*"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}