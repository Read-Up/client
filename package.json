{
  "name": "read-up-front",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "start": "turbo start",
    "user": "pnpm -F user",
    "lint": "turbo run lint",
    "ui": "pnpm -F @readup/ui",
    "utils": "pnpm -F @readup/utils",
    "clean": "rm -rf .turbo && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name '.next' -type d -prune -exec rm -rf '{}' + && rm -f pnpm-lock.yaml + && pnpm install",
    "re-build": "pnpm install && pnpm build",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "pre-commit": "pnpm lint && pnpm format && git add -A ."
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "turbo": "^2.4.4",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=18",
    "npm": "pnpm only",
    "yarn": "pnpm only"
  }
}